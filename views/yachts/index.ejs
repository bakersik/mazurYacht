<% layout('layouts/boilerplate') %>
    <h1>Nasza oferta jachtów</h1>

    <% for(let yacht of yachts) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= yacht.photo %>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= yacht.name %>
                        </h5>
                        <p class="card-text">
                            <%= yacht.type %>
                        </p>
                        <a class="btn btn-secondary" href="/yachts/<%= yacht._id %>">Szczegóły</a>
                        <a class="btn btn-primary" href="/yachts/<%= yacht._id %>/dates">Sprawdź dostępność</a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>